<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/visit_menu"
    tools:context=".featuers.home.homeFiles.visitServices.view.InspectionVisitingMenuFragment"
    android:layout_margin="5dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:orientation="horizontal"
  >
    <androidx.cardview.widget.CardView
        android:id="@+id/inspection_mng_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:theme="@style/insBtn">

            <TextView
                style="@style/insResult"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@mipmap/circle_foreground"
                android:text="@string/one"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="@string/inspection_mng_btn"
                android:theme="@style/insBtn" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/inspection_plane_mng_btn"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
       android:layout_weight="1"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="5dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:theme="@style/insBtn"
            >

            <TextView
                style="@style/insResult"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/two"
                android:background="@mipmap/circle_foreground"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:text="@string/inspection_plane_mng_btn"
                android:theme="@style/insBtn"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/inspection_plane_prp_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="5dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:theme="@style/insBtn">

                <TextView
                    style="@style/insResult"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/circle_foreground"
                    android:text="@string/three"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:text="@string/inspection_plane_prp_btn"
                    android:theme="@style/insBtn" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/inspection_dec_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:theme="@style/insBtn"
                >

                <TextView
                    style="@style/insResult"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="@string/four"
                    android:background="@mipmap/circle_foreground"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="@string/inspection_dec_btn"
                    android:theme="@style/insBtn"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/inspection_visit_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="5dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:theme="@style/insBtn">

                <TextView
                    style="@style/insResult"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@mipmap/circle_foreground"
                    android:text="@string/five"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:text="@string/inspection_visit_btn"
                    android:theme="@style/insBtn" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
         android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:theme="@style/insBtn"
                >

                <TextView
                    style="@style/insResult"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="@string/two"
                    android:background="@mipmap/circle_foreground"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:text="@string/inspection_plane_mng_btn"
                    android:theme="@style/insBtn"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


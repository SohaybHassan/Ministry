<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_save_major_services"
        style="@style/btnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/Save"
        android:layout_margin="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:textDirection="rtl"
            android:paddingBottom="70dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            >

            <TextView
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PalestinianID" />

            <TextView
                android:id="@+id/et_user_id_major_services"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/FirstName" />

                    <TextView
                        android:id="@+id/et_first_name_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/GrandfatherName" />

                    <TextView
                        android:id="@+id/et_grand_name_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        android:id="@+id/document_type"
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/document_type" />

                    <TextView
                        android:id="@+id/et_document_type"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        android:id="@+id/gender"
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/Gender" />

                    <TextView
                        android:id="@+id/et_gender_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/DateOfBirth" />

                    <TextView
                        android:id="@+id/tv_birth_date_major_services"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:textDirection="rtl" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/SocialStatus" />

                    <TextView
                        android:id="@+id/et_social_status_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/DateOfDeath" />

                    <TextView
                        android:id="@+id/tv_death_date_major_services"
                        style="@style/datePickerStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:textDirection="rtl" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/OtherNationality" />

                    <TextView
                        android:id="@+id/et_other_nationality_id_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/age" />

                    <TextView
                        android:id="@+id/et_age_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/FatherName" />

                    <TextView
                        android:id="@+id/et_father_name"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/Family" />

                    <TextView
                        android:id="@+id/et_family_name"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        android:id="@+id/document_no"
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/document_no" />

                    <TextView
                        android:id="@+id/et_document_no"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/PlaceOfBirth" />

                    <TextView
                        android:id="@+id/et_birth_place_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/MotherName" />

                    <TextView
                        android:id="@+id/et_mother_name_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/NumberOfChildren" />

                    <TextView
                        android:id="@+id/et_child_number_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/Nationality" />

                    <TextView
                        android:id="@+id/et_nationality_major_services"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/directorate" />

                    <TextView
                        android:id="@+id/et_directorate_belongs"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">


        <TextView
            android:id="@+id/tv_top_start_dialog"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/jordy_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/job_rights"
            android:textColor="@color/gallery"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_top_end_dialog"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/edit"
            android:textColor="@color/dove_gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_save"
            app:layout_constraintTop_toBottomOf="@+id/btm_view" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/indemnity"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/tv_top_start_dialog"
            app:layout_constraintStart_toStartOf="@+id/tv_top_start_dialog"
            app:layout_constraintTop_toBottomOf="@+id/tv_top_start_dialog" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/annual_vacation_days_allowance"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/compensation_for_legal_time_limit"
            app:layout_constraintBottom_toTopOf="@+id/compensation_for_unfair_dismissal"
            app:layout_constraintEnd_toEndOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/compensation_for_unfair_dismissal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/compensation_for_unfair_dismissal"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/religious_holidays"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/compensation_for_unfair_dismissal"
            app:layout_constraintTop_toBottomOf="@+id/compensation_for_unfair_dismissal" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/late_wages"
            app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/total"
            app:layout_constraintEnd_toEndOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/tv_top_end_dialog"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@color/jordy_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/amounts_due"
            android:textColor="@color/gallery"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_top_start_dialog"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/save"
            android:textColor="@color/jordy_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_edit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btm_view" />

        <View
            android:id="@+id/btm_view"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/mercury"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <View
            android:id="@+id/vertical_view"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/mercury"
            app:layout_constraintBottom_toTopOf="@+id/btm_view"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/tv_top_start_dialog" />

        <TextView
            android:id="@+id/tv_indemnity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/tv_top_end_dialog"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_top_end_dialog" />

        <TextView
            android:id="@+id/tv_annual_vacation_days_allowance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/tv_indemnity"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_indemnity" />

        <TextView
            android:id="@+id/tv_compensation_for_legal_time_limit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="@+id/tv_annual_vacation_days_allowance"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_annual_vacation_days_allowance" />

        <TextView
            android:id="@+id/tv_compensation_for_unfair_dismissal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/compensation_for_unfair_dismissal"
            app:layout_constraintEnd_toEndOf="@+id/tv_compensation_for_legal_time_limit"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_compensation_for_legal_time_limit" />

        <TextView
            android:id="@+id/tv_religious_holidays"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/tv_compensation_for_unfair_dismissal"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_compensation_for_unfair_dismissal" />

        <TextView
            android:id="@+id/tv_late_wages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView14"
            app:layout_constraintEnd_toEndOf="@+id/tv_religious_holidays"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_religious_holidays" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:paddingStart="30dp"
            android:text="@string/zero"
            android:textColor="@color/jordy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/tv_late_wages"
            app:layout_constraintStart_toEndOf="@+id/vertical_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_late_wages" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
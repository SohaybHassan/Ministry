<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".featuers.home.homeFiles.visitServices.view.visitStart.SafeFragment">

<!--<include-->
<!--    layout=""-->
<!--    android:id=""/>-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/txtStyle"
        android:id="@+id/law_id"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/safe_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_safe"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp">
    <Button
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="@string/save"
        android:id="@+id/sf_save"

        style="@style/btnStyle"/>

    <ImageButton
        android:id="@+id/sf_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
android:layout_marginRight="50dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/visit_start"
        android:src="@drawable/ic_baseline_arrow_back"
        android:layout_gravity="center_horizontal"
       android:paddingEnd="5dp"
        />
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
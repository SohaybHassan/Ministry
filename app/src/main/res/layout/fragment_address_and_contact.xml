<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:textDirection="rtl"
            tools:context=".view.userfile.UserFileFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/state" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_state_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/district" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_district_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/city" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_city_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/street" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_street_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearset_address" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nearest_place_address_contact"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/building" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_building_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/phone_number" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_mobile_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/Telephone" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_phone_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />

                    <TextView
                        style="@style/txtStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/phone_number_first_grade" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_first_grade_mobile_address_contact"
                        style="@style/editTxtStyle"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email_address_contact"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:inputType="numberDecimal" />

            <TextView
                style="@style/txtStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_facebook_address_contact"
                style="@style/editTxtStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:inputType="numberDecimal" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_address_contact"
        style="@style/btnStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:text="@string/Save" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>